rows = int(input("How many: "))

rows,columns = (rows,rows)
colon = ":"
star = "*"
for index in range (0,rows): 
  array = []
  if index%2 == 1: 
    odd = True 
  else: 
    odd = False
  for i in range (0,rows): 
    if odd == True: 
      char = colon
      odd = False 
    else: 
      char = star
      odd = True
    array.append(char)
  print(array)
